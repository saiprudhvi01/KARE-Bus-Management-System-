<div class="container animate__animated animate__fadeIn">
  <div class="row mb-4">
    <div class="col-12">
      <div class="card shadow-sm border-primary">
        <div class="card-body d-flex justify-content-between align-items-center">
          <div>
            <h2 class="card-title mb-1">
              <i class="fas fa-user-graduate text-primary me-2"></i> Manage Students
            </h2>
            <p class="text-muted mb-0">View students and manage their bus assignments</p>
          </div>
          <a href="/management/dashboard" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Back to Dashboard
          </a>
        </div>
      </div>
    </div>
  </div>

  <% if (messages && messages.error && messages.error.length) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <i class="fas fa-exclamation-circle me-2"></i><%= messages.error[0] %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>

  <% if (messages && messages.success && messages.success.length) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <i class="fas fa-check-circle me-2"></i><%= messages.success[0] %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>

  <div class="row mb-4">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
          <h5 class="mb-0">
            <i class="fas fa-users me-2 text-primary"></i> Students
          </h5>
          <div class="input-group input-group-sm" style="max-width: 280px;">
            <input type="text" id="studentSearch" class="form-control" placeholder="Search by name, ID, department...">
            <button class="btn btn-outline-secondary" type="button">
              <i class="fas fa-search"></i>
            </button>
          </div>
        </div>
        <div class="card-body">
          <% if (students && students.length > 0) { %>
            <div class="table-responsive">
              <table class="table table-hover align-middle" id="studentsTable">
                <thead class="table-light">
                  <tr>
                    <th>Name</th>
                    <th>Student ID</th>
                    <th>Department</th>
                    <th>Email</th>
                    <th>Bus</th>
                    <th>Assigned</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% students.forEach(student => { %>
                    <tr>
                      <td><strong><%= student.name || '-' %></strong></td>
                      <td><%= student.studentId || '-' %></td>
                      <td><%= student.department || '-' %></td>
                      <td><small class="text-muted"><%= student.email || '-' %></small></td>
                      <td>
                        <% if (student.busName) { %>
                          <span class="badge bg-success"><%= student.busName %> (<%= student.busNumber %>)</span>
                        <% } else { %>
                          <span class="badge bg-secondary">No bus assigned</span>
                        <% } %>
                      </td>
                      <td>
                        <% if (student.status === 'assigned') { %>
                          <span class="badge bg-success">Assigned</span>
                        <% } else { %>
                          <span class="badge bg-warning text-dark">Not Assigned</span>
                        <% } %>
                      </td>
                      <td>
                        <form action="/management/students/assign-bus" method="POST" class="d-flex gap-2">
                          <input type="hidden" name="studentId" value="<%= student._id %>">
                          <select name="busId" class="form-select form-select-sm" required>
                            <option value="">Select Bus</option>
                            <% buses.forEach(bus => { %>
                              <option value="<%= bus._id %>" <%= student.assignedBus && String(student.assignedBus) === String(bus._id) ? 'selected' : '' %>>
                                <%= bus.busName %> (<%= bus.busNumber %>)
                              </option>
                            <% }) %>
                          </select>
                          <button type="submit" class="btn btn-sm btn-primary">
                            <i class="fas fa-save"></i>
                          </button>
                        </form>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          <% } else { %>
            <div class="text-center py-5">
              <i class="fas fa-user-graduate fa-4x text-muted mb-3"></i>
              <h5>No students found</h5>
              <p class="text-muted mb-0">Students will appear here once they sign up or are added to the system.</p>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('studentSearch');
    const table = document.getElementById('studentsTable');
    if (searchInput && table) {
      searchInput.addEventListener('keyup', function() {
        const search = this.value.toLowerCase();
        const rows = table.querySelectorAll('tbody tr');
        rows.forEach(row => {
          const text = row.textContent.toLowerCase();
          row.style.display = text.includes(search) ? '' : 'none';
        });
      });
    }
  });
</script>
