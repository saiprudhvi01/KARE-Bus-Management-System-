<%- include('../partials/header', { title: 'Manage Routes | Bus Management' }) %>
<%- include('../partials/navbar-management') %>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2>Manage Routes</h2>
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Bus Routes</h5>
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addRouteModal">
                        <i class="fas fa-plus"></i> Add New Route
                    </button>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Route Name</th>
                                    <th>Stops</th>
                                    <th>Buses</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (routes && routes.length > 0) { %>
                                    <% routes.forEach(route => { %>
                                        <tr>
                                            <td><%= route.name %></td>
                                            <td><%= route.stops ? route.stops.length : 0 %> Stops</td>
                                            <td><%= route.buses ? route.buses.length : 0 %> Buses</td>
                                            <td>
                                                <span class="badge bg-<%= route.isActive ? 'success' : 'secondary' %>">
                                                    <%= route.isActive ? 'Active' : 'Inactive' %>
                                                </span>
                                            </td>
                                            <td>
                                                <button class="btn btn-sm btn-info" onclick="editRoute('<%= route._id %>')">
                                                    <i class="fas fa-edit"></i> Edit
                                                </button>
                                                <button class="btn btn-sm btn-danger" onclick="deleteRoute('<%= route._id %>')">
                                                    <i class="fas fa-trash"></i> Delete
                                                </button>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="5" class="text-center">No routes found. Add a new route to get started.</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Route Modal -->
<div class="modal fade" id="addRouteModal" tabindex="-1" aria-labelledby="addRouteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="addRouteForm" action="/management/routes/add" method="POST">
                <div class="modal-header">
                    <h5 class="modal-title" id="addRouteModalLabel">Add New Route</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="routeName" class="form-label">Route Name</label>
                        <input type="text" class="form-control" id="routeName" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Route Stops</label>
                        <div id="routeStops">
                            <div class="input-group mb-2">
                                <input type="text" class="form-control" name="stops[]" placeholder="Enter stop name" required>
                                <button type="button" class="btn btn-outline-danger" onclick="removeStop(this)">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <button type="button" class="btn btn-sm btn-outline-primary" onclick="addStop()">
                            <i class="fas fa-plus"></i> Add Stop
                        </button>
                    </div>
                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" id="isActive" name="isActive" checked>
                        <label class="form-check-label" for="isActive">Active Route</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Route</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
function addStop() {
    const stopsContainer = document.getElementById('routeStops');
    const newStop = document.createElement('div');
    newStop.className = 'input-group mb-2';
    newStop.innerHTML = `
        <input type="text" class="form-control" name="stops[]" placeholder="Enter stop name" required>
        <button type="button" class="btn btn-outline-danger" onclick="removeStop(this)">
            <i class="fas fa-minus"></i>
        </button>
    `;
    stopsContainer.appendChild(newStop);
}

function removeStop(button) {
    const stops = document.querySelectorAll('#routeStops .input-group');
    if (stops.length > 1) {
        button.closest('.input-group').remove();
    } else {
        alert('At least one stop is required');
    }
}

function editRoute(routeId) {
    // Implement edit functionality
    alert('Edit route ' + routeId);
}

function deleteRoute(routeId) {
    if (confirm('Are you sure you want to delete this route?')) {
        fetch(`/management/routes/delete/${routeId}`, {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json',
            },
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert('Error: ' + (data.message || 'Failed to delete route'));
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Failed to delete route');
        });
    }
}
</script>

