<%- include('../partials/header') %>
<%- include('../partials/navbar-management') %>

<div class="container py-4">
  <!-- Page Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="h3 mb-1">Bus Bookings</h1>
      <p class="text-muted mb-0">View all bus booking requests and their status</p>
    </div>
    <a href="/management/dashboard" class="btn btn-outline-secondary">
      <i class="fas fa-arrow-left me-2"></i> Back to Dashboard
    </a>
  </div>

  <!-- Messages -->
  <% if (locals.error_msg) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <i class="fas fa-exclamation-circle me-2"></i><%= error_msg %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>
  
  <% if (locals.success_msg) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <i class="fas fa-check-circle me-2"></i><%= success_msg %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>

  <!-- Bookings Table -->
  <div class="card shadow-sm">
    <div class="card-header bg-white">
      <div class="d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
          <i class="fas fa-ticket-alt me-2"></i>All Bus Bookings
        </h5>
        <span class="badge bg-primary">
          <%= bookings.length %> Bookings
        </span>
      </div>
    </div>
    <div class="card-body">
      <% if (typeof bookings !== 'undefined' && bookings.length > 0) { %>
        <div class="table-responsive">
          <table class="table table-hover">
            <thead class="table-light">
              <tr>
                <th>Student</th>
                <th>Bus</th>
                <th>Boarding Stop</th>
                <th>Destination</th>
                <th>Driver</th>
                <th>Status</th>
                <th>Request Date</th>
              </tr>
            </thead>
            <tbody>
              <% bookings.forEach(booking => { %>
                <tr>
                  <td>
                    <div class="d-flex align-items-center">
                      <div class="bg-light rounded-circle p-2 me-3">
                        <i class="fas fa-user text-primary"></i>
                      </div>
                      <div>
                        <div class="fw-medium"><%= booking.student ? booking.student.name : 'Unknown' %></div>
                        <small class="text-muted">
                          <%= booking.student ? booking.student.studentId : 'N/A' %>
                        </small>
                      </div>
                    </div>
                  </td>
                  <td>
                    <div class="d-flex align-items-center">
                      <div class="bg-light rounded p-2 me-3">
                        <i class="fas fa-bus text-primary"></i>
                      </div>
                      <div>
                        <div class="fw-medium">
                          <%= booking.bus ? booking.bus.busName : 'Unknown Bus' %>
                        </div>
                        <small class="text-muted">
                          <%= booking.bus ? booking.bus.busId : 'N/A' %> | 
                          <%= booking.bus ? booking.bus.route : 'No Route' %>
                        </small>
                      </div>
                    </div>
                  </td>
                  <td>
                    <span class="badge bg-light text-dark">
                      <%= booking.boardingStop || 'Not specified' %>
                    </span>
                  </td>
                  <td>
                    <span class="badge bg-light text-dark">
                      <%= booking.destination || 'Not specified' %>
                    </span>
                  </td>
                  <td>
                    <div class="d-flex align-items-center">
                      <div class="bg-light rounded-circle p-2 me-3">
                        <i class="fas fa-user-tie text-primary"></i>
                      </div>
                      <div>
                        <div class="fw-medium">
                          <%= booking.driver ? booking.driver.name : booking.bus ? booking.bus.driverName : 'Not Assigned' %>
                        </div>
                        <small class="text-muted">Driver</small>
                      </div>
                    </div>
                  </td>
                  <td>
                    <% if (booking.status === 'pending') { %>
                      <span class="badge bg-warning text-dark">Pending</span>
                    <% } else if (booking.status === 'accepted') { %>
                      <span class="badge bg-success">Accepted</span>
                    <% } else if (booking.status === 'rejected') { %>
                      <span class="badge bg-danger">Rejected</span>
                    <% } else { %>
                      <span class="badge bg-secondary"><%= booking.status %></span>
                    <% } %>
                  </td>
                  <td>
                    <%= new Date(booking.createdAt).toLocaleDateString() %>
                    <br>
                    <small class="text-muted">
                      <%= new Date(booking.createdAt).toLocaleTimeString() %>
                    </small>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="text-center py-5">
          <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-3" 
               style="width: 80px; height: 80px;">
            <i class="fas fa-ticket-alt text-muted fa-2x"></i>
          </div>
          <h5 class="mb-2">No Bookings Found</h5>
          <p class="text-muted mb-0">No bus booking requests have been made yet.</p>
        </div>
      <% } %>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
